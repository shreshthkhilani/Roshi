<% layout( 'layout' ) -%>

<script type="text/javascript" src="home.js"></script>

<div class="container" align="center" id="formpanel">
	<br>
	<div class="row">
		<div class="col-xs-6">
			<button class="roshiBtn stretchBtn saveBtn" type="submit">Save Information</button>
		</div>
		<div class="col-xs-6">
			<button class="roshiBtn stretchBtn uploadBtn" type="submit">Upload Résumé</button>
		</div>
	</div>
	<br>

	<h4>Basic Information</h4>
	<div class="row">
		<div class="col-xs-6">
			<input type="text" class="form-control insideInput" id="firstname" placeholder="First Name" value="<%= firstname %>">
		</div>
		<div class="col-xs-6">
			<input type="text" class="form-control insideInput" id="lastname" placeholder="Last Name" value="<%= lastname %>">
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-xs-6">
			<input type="text" class="form-control insideInput" id="college" placeholder="School" value="University of Pennsylvania" disabled>
		</div>
		<div class="col-xs-6">
			<input type="text" class="form-control insideInput" id="email" placeholder="Email" value="<%= email %>" disabled>
		</div>
	</div>
	<br>

	<h4>GPA and Expected Graduation</h4>
	<div class="row">
		<div class="col-xs-6">
			<% if (gpa === 0) { %>
				<input type="number" min="0.00" max="4.00" step="0.01" class="form-control insideInput" id="gpa" placeholder="GPA">
			<% } else { %>
				<input type="number" min="0.00" max="4.00" step="0.01" class="form-control insideInput" id="gpa" placeholder="GPA" value="<%= gpa %>">
			<% } %>
		</div>
		<div id="classDiv" hidden><%= year %></div>
		<div class="col-xs-6">
			<select class="form-control" id="year">
				<option value="" disabled selected>Graduation Year</option>
			  <option value="2015">2015</option>
			  <option value="2016">2016</option>
			  <option value="2017">2017</option>
			  <option value="2018">2018</option>
			  <option value="2019">2019</option>
			  <option value="2020">2020</option>
			</select>
		</div>
	</div>
	<br>

	<h4>School(s), Major(s), and Minor(s)</h4>
	<div class="row">
		<div class="col-xs-6">
			<div id="school0Div" hidden><%= school[0] %></div>
			<select class="form-control" id="school0">
				<option value="" disabled selected>Primary School</option>
			  <option value="wharton">Wharton</option>
			  <option value="seas">Engineering</option>
			  <option value="sas">College</option>
			  <option value="nursing">Nursing</option>
			</select>
		</div>
		<div class="col-xs-6">
			<div id="school1Div" hidden><%= school[1] %></div>
			<select class="form-control" id="school1">
				<option value="" disabled selected>Secondary School</option>
				<option>None</option>
			  <option value="wharton">Wharton</option>
			  <option value="seas">Engineering</option>
			  <option value="sas">College</option>
			  <option value="nursing">Nursing</option>
			</select>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-xs-4">
			<input type="text" class="form-control insideInput" id="major1" placeholder="Major or Concentration" <% if (major[0]) { %>value="<%= major[0] %>"<% } %>>
		</div>
		<div class="col-xs-4">
			<input type="text" class="form-control insideInput" id="major2" placeholder="Major or Concentration" <% if (major[1]) { %>value="<%= major[1] %>"<% } %>>
		</div>
		<div class="col-xs-4">
			<input type="text" class="form-control insideInput" id="major3" placeholder="Major or Concentration" <% if (major[2]) { %>value="<%= major[2] %>"<% } %>>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-xs-4">
			<input type="text" class="form-control insideInput" id="minor1" placeholder="Minor" <% if (minor[0]) { %>value="<%= minor[0] %>"<% } %>>
		</div>
		<div class="col-xs-4">
			<input type="text" class="form-control insideInput" id="minor2" placeholder="Minor" <% if (minor[1]) { %>value="<%= minor[1] %>"<% } %>>
		</div>
		<div class="col-xs-4">
			<input type="text" class="form-control insideInput" id="minor3" placeholder="Minor" <% if (minor[2]) { %>value="<%= minor[2] %>"<% } %>>
		</div>
	</div>
	<br>

	<h4>Work Experience</h4>
	<div class="row">
		<div class="col-xs-4">
			<input type="text" class="form-control insideInput" value="Summer 2015" disabled>
		</div>
		<div class="col-xs-4">
			<input type="text" class="form-control insideInput" id="company1" placeholder="Company Name" <% if (work.summer2015.company) {%>value="<%= work.summer2015.company %>"<% } %>>
		</div>
		<div class="col-xs-4">
			<input type="text" class="form-control insideInput" id="position1" placeholder="Position" <% if (work.summer2015.position) {%>value="<%= work.summer2015.position %>"<% } %>>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-xs-4">
			<input type="text" class="form-control insideInput" value="Summer 2014" disabled>
		</div>
		<div class="col-xs-4">
			<input type="text" class="form-control insideInput" id="company2" placeholder="Company Name" <% if (work.summer2014.company) {%>value="<%= work.summer2014.company %>"<% } %>>
		</div>
		<div class="col-xs-4">
			<input type="text" class="form-control insideInput" id="position2" placeholder="Position" <% if (work.summer2014.position) {%>value="<%= work.summer2014.position %>"<% } %>>
		</div>
	</div>
	<br>
